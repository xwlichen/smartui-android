<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="smui_backgroundColor" format="color" />
<!--    <attr name="smui_maskColor" format="color" />-->
    <attr name="smui_borderColor" format="color" />
    <attr name="smui_borderWidth" format="dimension" />
    <attr name="smui_linkColor" format="color" />
    <attr name="smui_orientation" format="enum">
        <enum name="horizontal" value="0" />
        <enum name="vertical" value="1" />
    </attr>
    <attr name="smui_title" format="string" />


    <!-- 圆角是否要自适应为 View 高度的一半 -->
    <attr name="smui_isRadiusAdjustBounds" format="boolean" />

    <!--是否是圆形-->
    <attr name="smui_isCircle" format="boolean" />

    <!--是否裁剪背景-->
    <attr name="smui_isClipBg" format="boolean" />


    <!-- 同时指定四个方向的圆角大小 -->
    <attr name="smui_radius" format="dimension" />
    <!-- 指定左上方圆角的大小 -->
    <attr name="smui_radiusTopLeft" format="dimension" />
    <!-- 指定右上方圆角的大小 -->
    <attr name="smui_radiusTopRight" format="dimension" />
    <!-- 指定左下方圆角的大小 -->
    <attr name="smui_radiusBottomLeft" format="dimension" />
    <!-- 指定右下方圆角的大小 -->
    <attr name="smui_radiusBottomRight" format="dimension" />


    <attr name="smui_border_width" format="dimension"/>
    <attr name="smui_border_color" format="color"/>
    <attr name="smui_selected_mask_color" format="color"/>
    <attr name="smui_selected_border_color" format="color"/>
    <attr name="smui_selected_border_width" format="dimension"/>
    <attr name="smui_corner_radius" format="dimension"/>
    <attr name="smui_is_oval" format="boolean"/>
    <attr name="smui_is_circle" format="boolean"/>
    <attr name="smui_is_touch_select_mode_enabled" format="boolean"/>


    <!-- layout start -->
    <declare-styleable name="SMUILayout">
        <attr name="android:maxWidth" />
        <attr name="android:maxHeight" />
        <attr name="android:minWidth" />
        <attr name="android:minHeight" />
        <attr name="smui_bottomDividerHeight" format="dimension" />
        <attr name="smui_bottomDividerColor" format="color|reference" />
        <attr name="smui_bottomDividerInsetLeft" format="dimension" />
        <attr name="smui_bottomDividerInsetRight" format="dimension" />
        <attr name="smui_topDividerHeight" format="dimension" />
        <attr name="smui_topDividerColor" format="color|reference" />
        <attr name="smui_topDividerInsetLeft" format="dimension" />
        <attr name="smui_topDividerInsetRight" format="dimension" />
        <attr name="smui_leftDividerWidth" format="dimension" />
        <attr name="smui_leftDividerColor" format="color|reference" />
        <attr name="smui_leftDividerInsetTop" format="dimension" />
        <attr name="smui_leftDividerInsetBottom" format="dimension" />
        <attr name="smui_rightDividerWidth" format="dimension" />
        <attr name="smui_rightDividerColor" format="color|reference" />
        <attr name="smui_rightDividerInsetTop" format="dimension" />
        <attr name="smui_rightDividerInsetBottom" format="dimension" />
        <attr name="smui_radius" />
        <attr name="smui_borderColor" />
        <attr name="smui_borderWidth" />
        <attr name="smui_outerNormalColor" format="color|reference" />
        <attr name="smui_hideRadiusSide" format="enum">
            <enum name="none" value="0" />
            <enum name="top" value="1" />
            <enum name="right" value="2" />
            <enum name="bottom" value="3" />
            <enum name="left" value="4" />
        </attr>
        <attr name="smui_showBorderOnlyBeforeL" format="boolean" />
        <attr name="smui_shadowElevation" format="dimension" />
        <attr name="smui_useThemeGeneralShadowElevation" format="boolean" />
        <attr name="smui_shadowAlpha" format="float" />
        <attr name="smui_outlineInsetTop" format="dimension" />
        <attr name="smui_outlineInsetLeft" format="dimension" />
        <attr name="smui_outlineInsetRight" format="dimension" />
        <attr name="smui_outlineInsetBottom" format="dimension" />
        <attr name="smui_outlineExcludePadding" format="boolean" />
    </declare-styleable>
    <!-- layout end -->


    <!-- Btn start -->
    <declare-styleable name="SMUIButton">
        <attr name="smui_backgroundColor" />
        <attr name="smui_borderColor" />
        <attr name="smui_borderWidth" />
        <attr name="smui_isRadiusAdjustBounds" />
        <attr name="smui_radius" />
        <attr name="smui_radiusTopLeft" />
        <attr name="smui_radiusTopRight" />
        <attr name="smui_radiusBottomLeft" />
        <attr name="smui_radiusBottomRight" />
    </declare-styleable>
    <attr name="SMUIButtonStyle" format="reference" />
    <!-- Btn end -->


    <!-- TopBar start -->
    <declare-styleable name="SMUITopBar">
        <attr name="smui_topbar_title_gravity" format="enum">
            <enum name="left_center" value="19" />
            <enum name="center" value="17" />
        </attr>
        <attr name="smui_topbar_need_separator" format="boolean" />
        <attr name="smui_topbar_separator_color" format="color" />
        <attr name="smui_topbar_separator_height" format="dimension" />
        <attr name="smui_topbar_bg_color" format="color" />
        <attr name="smui_topbar_left_back_drawable_id" format="reference" />
        <attr name="smui_topbar_right_back_drawable_id" format="reference" />
        <attr name="smui_topbar_title_text_size" format="dimension" />
        <attr name="smui_topbar_title_text_size_with_subtitle" format="dimension" />
        <attr name="smui_topbar_subtitle_text_size" format="dimension" />
        <attr name="smui_topbar_title_color" format="color" />
        <attr name="smui_topbar_subtitle_color" format="color" />
        <attr name="smui_topbar_title_margin_horizontal_when_no_btn_aside" format="dimension" />
        <attr name="smui_topbar_title_container_padding_horizontal" format="dimension" />
        <attr name="smui_topbar_image_btn_width" format="dimension" />
        <attr name="smui_topbar_image_btn_height" format="dimension" />
        <attr name="smui_topbar_text_btn_padding_horizontal" format="dimension" />
        <attr name="smui_topbar_text_btn_color_state_list" format="reference" />
        <attr name="smui_topbar_text_btn_text_size" format="dimension" />
    </declare-styleable>
    <attr name="SMUITopBarStyle" format="reference" />
    <!-- TopBar end -->


    <!-- ImageView start -->
    <declare-styleable name="SMUIImageView">
        <attr name="smui_border_width"/>
        <attr name="smui_border_color"/>
        <attr name="smui_selected_mask_color"/>
        <attr name="smui_selected_border_color"/>
        <attr name="smui_selected_border_width"/>
        <attr name="smui_corner_radius"/>
        <attr name="smui_is_oval"/>
        <attr name="smui_is_circle"/>
        <attr name="smui_is_touch_select_mode_enabled"/>
    </declare-styleable>
    <attr name="SMUIImageViewStyle" format="reference" />
    <!-- ImageView end -->


    <!-- SMUILoadingView start -->
    <declare-styleable name="SMUILoadingView">
        <attr name="smui_loading_view_size" format="dimension" />
        <attr name="android:color" />
    </declare-styleable>
    <attr name="SMUILoadingStyle" format="reference" />
    <declare-styleable name="SMUILoadingIndicatorView">
        <attr name="smui_indicatorColor" format="color" />
        <attr name="smui_indicatorName" format="string" />
    </declare-styleable>
    <attr name="SMUILoadingIndicatorStyle" format="reference" />
    <!-- SMUILoadingView end -->


    <declare-styleable name="SMUILottieBottomNavView">
        <attr name="smui_nav_selected_width" format="dimension" />
        <attr name="smui_nav_selected_height" format="dimension" />
        <attr name="smui_nav_unselected_width" format="dimension" />
        <attr name="smui_nav_unselected_height" format="dimension" />
        <attr name="smui_nav_text_size" format="dimension" />
        <attr name="smui_nav_text_show_on_unselected" format="boolean" />
    </declare-styleable>


    <attr name="smui_shadowColor" format="color" />
    <attr name="smui_shadowRadius" format="dimension" />
    <attr name="smui_shadowSize" format="dimension" />
    <attr name="smui_shadowPadding" format="dimension" />
    <attr name="smui_tranigleSize" format="dimension" />

    <declare-styleable name="ShadowBgView">
        <attr name="smui_backgroundColor" />
        <attr name="smui_shadowColor" />
        <attr name="smui_shadowRadius" />
        <attr name="smui_shadowSize" />
        <attr name="smui_shadowPadding" />
        <attr name="smui_tranigleSize" />
        <attr name="smui_radius" />
        <attr name="smui_radiusTopLeft" />
        <attr name="smui_radiusTopRight" />
        <attr name="smui_radiusBottomLeft" />
        <attr name="smui_radiusBottomRight" />

    </declare-styleable>


</resources>