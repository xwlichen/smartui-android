<?xml version="1.0" encoding="utf-8" ?>
<resources>


    <style name="SMUI.Dialog" parent="android:Theme.Dialog">
        <!--背景模糊的透明度-->
        <item name="android:backgroundDimAmount">?attr/smui_dialog_background_dim_amount</item>
        <item name="android:windowBackground">@color/smui_config_color_transparent</item>
        <!--不用window title，使用自己的layout来做title-->
        <item name="android:windowNoTitle">true</item>
        <!--在中间弹框、背后有遮罩的效果-->
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="SMUI.TipDialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <!-- Btn start -->
    <style name="SMUI.RoundButton" parent="@style/Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:padding">0dp</item>--><!-- 不用 android:padding，而用各个方向分别指定 padding，方便子类覆盖 -->
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">?attr/smui_round_btn_text_color</item>
        <item name="android:textSize">?attr/smui_round_btn_text_size</item>
        <item name="smui_isRadiusAdjustBounds">true</item>
        <item name="smui_backgroundColor">@color/smui_config_color_transparent</item>
        <item name="smui_borderWidth">?attr/smui_round_btn_border_width</item>
        <item name="smui_borderColor">?attr/smui_round_btn_border_color</item>
    </style>
    <!-- Btn end -->


    <!-- TopBar start -->
    <style name="SMUI.TopBar">
        <item name="smui_topbar_separator_color">?attr/smui_config_color_separator</item>
        <item name="smui_topbar_separator_height">1px</item>
        <item name="smui_topbar_bg_color">@color/smui_config_color_white</item>
        <item name="smui_topbar_need_separator">true</item>
        <item name="smui_topbar_left_back_drawable_id">@mipmap/smui_ic_back1</item>
        <item name="smui_topbar_title_gravity">center</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="smui_topbar_title_color">?attr/smui_config_color_gray_1</item>
        <item name="smui_topbar_title_text_size">17sp</item>
        <item name="smui_topbar_title_text_size_with_subtitle">16sp</item>
        <item name="smui_topbar_title_margin_horizontal_when_no_btn_aside">0dp</item>
        <item name="smui_topbar_title_container_padding_horizontal">8dp</item>
        <item name="smui_topbar_subtitle_text_size">11sp</item>
        <item name="smui_topbar_subtitle_color">@color/smui_config_color_gray_1</item>
        <item name="smui_topbar_image_btn_width">30dp</item>
        <item name="smui_topbar_image_btn_height">30dp</item>
        <item name="smui_topbar_text_btn_padding_horizontal">12dp</item>
        <item name="smui_topbar_text_btn_color_state_list">@color/smui_topbar_text_color</item>
        <item name="smui_topbar_text_btn_text_size">16sp</item>
    </style>
    <!-- TopBar end -->


    <!-- ImageView start -->
    <style name="SMUI.RoundImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:padding">0dp</item>--><!-- 不用 android:padding，而用各个方向分别指定 padding，方便子类覆盖 -->
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:scaleType">centerCrop</item>


        <item name="smui_isCircle">false</item>
        <item name="smui_maskColor">@color/smui_config_color_transparent</item>
        <item name="smui_borderWidth">?attr/smui_round_btn_border_width</item>
        <item name="smui_borderColor">?attr/smui_round_btn_border_color</item>
    </style>
    <!-- ImageView end -->


    <style name="SMUI.Loading">
        <item name="smui_loading_view_size">?attr/smui_loading_size</item>
        <item name="android:color">?attr/smui_loading_color</item>
    </style>

    <style name="SMUI.Loading.White">
        <item name="smui_loading_view_size">?attr/smui_loading_size</item>
        <item name="android:color">@color/smui_config_color_white</item>
    </style>


    <style name="SMUI.LoadingIndicator">
        <item name="android:minWidth">35dp</item>
        <item name="android:minHeight">35dp</item>
        <item name="android:maxWidth">35dp</item>
        <item name="android:maxHeight">35dp</item>
        <item name="smui_indicatorName">LineScaleIndicator</item>
        <item name="smui_indicatorColor">@color/smui_config_color_white</item>
    </style>


</resources>